{{>navbar}}

<div class="row">
  <div class="col-md-3 m-auto card card-body shadow">
    <form action='/user/login' method="POST" novalidate>
      <h1 class="text-center">Login</h1>
      <div class="form-group">
        <input type="email" name="email" value="{{formData.email}}"
          class="form-control {{#if emailInvalid}}is-invalid{{/if}} {{#if emailValid}} is-valid{{/if}}"
          placeholder="Enter email">
      </div>
      <div class="form-group">
        <input type="password" name="password" value="{{formData.password}}"
          class="form-control {{#if passwordInvalid}}is-invalid{{/if}} {{#if passwordValid}} is-valid{{/if}}"
          placeholder="Password">
      </div>
      <div class="text-center">
        <p>Don't have an account ? <a href="/user/signup">Signup</a></p>
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
  </div>

</div>

{{>notifications}}